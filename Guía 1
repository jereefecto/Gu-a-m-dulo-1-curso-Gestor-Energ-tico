    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tabs = document.querySelectorAll('.tab-btn');
            const contentSections = document.querySelectorAll('.content-section');

            function activateTab(tabId) {
                tabs.forEach(btn => {
                    if (btn.dataset.tab === tabId) {
                        btn.classList.add('tab-active');
                    } else {
                        btn.classList.remove('tab-active');
                    }
                });

                contentSections.forEach(section => {
                    if (section.id === tabId) {
                        section.classList.add('content-active');
                    } else {
                        section.classList.remove('content-active');
                    }
                });
            }

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    activateTab(tab.dataset.tab);
                });
            });

            activateTab('fundamentos');
            
            function createMatrixChart() {
                const ctx = document.getElementById('matrixChart');
                if (!ctx) return;
                
                const data = {
                    datasets: [{
                        label: 'Quick Wins',
                        data: [{x: 1, y: 9, r: 15, label: 'Sensores de presencia, ajuste de horarios, limpieza de filtros'}],
                        backgroundColor: 'rgba(13, 148, 136, 0.7)'
                    }, {
                        label: 'Inversiones Estrat√©gicas',
                        data: [{x: 9, y: 8, r: 25, label: 'Reemplazo por LED, VFDs, sistema solar'}],
                        backgroundColor: 'rgba(8, 126, 112, 0.7)'
                    }, {
                        label: 'Evaluar con Cuidado',
                        data: [{x: 8, y: 2, r: 20, label: 'Aislamiento t√©rmico en climas c√°lidos'}],
                        backgroundColor: 'rgba(234, 179, 8, 0.7)'
                    }, {
                        label: 'No Prioritarias',
                        data: [{x: 2, y: 1, r: 10, label: 'Etiquetas de concienciaci√≥n (solo si hay cultura d√©bil)'}],
                        backgroundColor: 'rgba(220, 38, 38, 0.7)'
                    }]
                };

                new Chart(ctx, {
                    type: 'bubble',
                    data: data,
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            x: {
                                title: { display: true, text: 'Costo de Inversi√≥n (Bajo ‚Üí Alto)' },
                                min: 0, max: 10, ticks: { display: false }
                            },
                            y: {
                                title: { display: true, text: 'Ahorro Energ√©tico (Bajo ‚Üí Alto)' },
                                min: 0, max: 10, ticks: { display: false }
                            }
                        },
                        plugins: {
                            legend: { position: 'bottom' },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return context.raw.label || '';
                                    }
                                }
                            },
                            annotation: {
                                annotations: {
                                    line1: { type: 'line', xMin: 5, xMax: 5, borderColor: 'rgb(203, 213, 225)', borderWidth: 2 },
                                    line2: { type: 'line', yMin: 5, yMax: 5, borderColor: 'rgb(203, 213, 225)', borderWidth: 2 }
                                }
                            }
                        }
                    }
                });
            }
            
            function createLoadCurveChart() {
                const ctx = document.getElementById('loadCurveChart');
                if (!ctx) return;
                
                const labels = Array.from({length: 24}, (_, i) => `${i}:00`);
                const dataPoints = [38,35,32,30,35,45, 90,150, 250,280,300,290, 220, 260,285,295, 240, 180,150,120, 90,70,50,40];
                
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Demanda (kW)',
                            data: dataPoints,
                            borderColor: 'rgb(20, 83, 45)',
                            tension: 0.3,
                            pointRadius: 0,
                            borderWidth: 2,
                            fill: true,
                            backgroundColor: (context) => {
                                const chart = context.chart;
                                const {ctx, chartArea} = chart;
                                if (!chartArea) return null;
                                const gradient = ctx.createLinearGradient(chartArea.left, 0, chartArea.right, 0);
                                gradient.addColorStop(0/24, 'rgba(74, 222, 128, 0.3)'); // Valle
                                gradient.addColorStop(6/24, 'rgba(250, 204, 21, 0.3)'); // Rampa
                                gradient.addColorStop(9/24, 'rgba(239, 68, 68, 0.3)'); // Pico
                                gradient.addColorStop(17/24, 'rgba(250, 204, 21, 0.3)'); // Descenso
                                gradient.addColorStop(21/24, 'rgba(74, 222, 128, 0.3)'); // Valle
                                return gradient;
                            }
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            title: { display: true, text: 'Curva de Carga T√≠pica de 24h' }
                        },
                        scales: {
                            y: { beginAtZero: true, title: { display: true, text: 'Potencia (kW)' } },
                            x: { title: { display: true, text: 'Hora del D√≠a' } }
                        }
                    }
                });
            }

            createMatrixChart();
            createLoadCurveChart();
        });
    </script>
</body>
</html>
